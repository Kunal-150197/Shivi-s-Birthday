<script>
function startStory() {
    window.scrollTo({ top: window.innerHeight, behavior: 'smooth' });

    const sections = document.querySelectorAll('.section');
    sections.forEach((section, index) => {
        setTimeout(() => {
            section.classList.add('show');
        }, index * 1000);
    });
}
</script>

